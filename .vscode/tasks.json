{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpack watch",
            "type": "shell",
            "command": "npm run build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "javascript",
                "pattern": {
                    "regexp": "^(.*):\\s+(.*)$",
                    "file": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack is watching the filesâ€¦",
                    "endsPattern": "compiled successfully."
                }
            }
        },
        {
            "label": "Start with Nodemon",
            "type": "shell",
            "command": "npx nodemon ${workspaceFolder}/index.js",
            "isBackground": true,
            "problemMatcher": {
                "owner": "javascript",
                "pattern": {
                    "regexp": ".*",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*\\[nodemon\\] starting `node .*$",
                    "endsPattern": "^.*\\[nodemon\\] clean exit - waiting for changes before restart.*$"
                }
            }
        }
    ]
}